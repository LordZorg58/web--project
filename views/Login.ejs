<!DOCTYPE html>
<html>
    <head>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
        <link rel="stylesheet" href="/static/George/Css/login.css">
       <!--<script src="val.js"></script>--> 
<title>Logins</title>
<meta name="viewport" content="width=device-width, initial-scale=1.0">

</head>
<body>
    <section >
        <div class="box">

            <form class="formy" onsubmit="all()" autocomplete="off">
                <h1>Login </h1>

                
            
            <div class="input">
                <ion-icon name="mail-outline"></ion-icon>
                <Label for="text">Email Address</Label>
                
                <input type="text" id="text"   required  name="un">

            </div>
           
            <br> 
            
            <div class="inputP">
                <span id="passs">
                    <ion-icon name="lock-closed-outline"></ion-icon>
                </span>


                <span id="ee">
                <ion-icon name="eye-off-outline" id="eye"></ion-icon>
                </span>
                
                
                <Label for="pass">Password</Label>
                <input type="password" id="pass" required name="pp">  
            </div>
            
            
            <br>
            <!------------ change the input type view----------->
            
            <input type="submit" value="Submit " class="bits" >                
            <div class="forget"><a href="ForgetPassword.ejs">Forget your password ?</a></div>
            <div class="sign">
                <p  class="P">Don't have an account? <a href="signUp.ejs">Register</a></p>
            </div>
        </div>
    </form>
</section>
<script>


    //------------------show and hide password------------------//
    //let image =document.getElementById("image");
const password=document.getElementById("pass");
const icon=document.querySelector('#eye');
icon.addEventListener('click',()=>{
    if(password.type==='password'){
        password.type="text";
        icon.name="eye-outline";
    }
    else{
        password.type="password";
        icon.name="eye-off-outline";
    }
})

</script>
<script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
<script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
</body>
    </html>